extends layout

block content
  .content
    .detail   
        h1=bodyType_detail.type
        div(style='display:flex; gap:20px; padding:10px')
          p=bodyType_detail.description
        ul
          each car in cars 
            li
              h2  
                a(href=car.url) #{car.make.name} #{car.model.name}
              p Released: #{car.year.year}
                div Stock: #{car.stock}

    