extends layout 

block content 
  .form 
    h1=title 

    form(method='POST' action='')
      div
        label(for='year') Year: 
        input(type='number', name='year' placeholder=2000 min=1 max=9999 value=(undefined===year ? '' : year.year))
      button(type='submit') Submit 

    if errors 
      ul
        for error in errors 
          li!=error.msg